{% extends 'sitesiteBundle::base_pages.html.twig' %}
{% set cssjsloads = 'simple' %}
{% import 'sitesiteBundle:blocks:fiches_actions.html.twig' as fiches_macros %}

{% block mainContainer %}
<section>
	<div class="container">
		<div class="row">

			{% block menuArticle %}
			{{ render(controller('sitesiteBundle:Default:menuArticle')) }}
			{% endblock menuArticle %}

			<div class="col-sm-9 col-md-9 padding-left-resp">
				<div class="content-page-right">
					<h2 class="title">
						{% if categorie|default(null) != null and categorie.nestedParents|default([])|length > 0 %}<span style="font-weight:300;">
						{% for parent in categorie.nestedParents %}{{ parent.nom }} / {% endfor %}
						{{ categorie.nom }} / </span>{% endif %}
						{{ fiche.nom }}
					</h2>
					<div class="product-details fiche-recette background-gray"><!--product-details-->
						{% if fiche.mainMedia.isScreenableImage|default(null) != null %}
						<div class="col-sm-5">
							<div class="product-image-wrapper">
								<div class="single-products">
									<div class="productinfo">
										<img src="{{ fiche.mainMedia.img }}" alt="image" />
									</div>
								</div>
							</div>
						</div><!--/col-sm-5-->
						{% endif %}
						<div class="col-sm-7">
							<div class="product-information"><!--/product-information-->
								{{ fiche.descriptif|raw }}
								
							</div><!--/product-information-->
						</div><!--/col-sm-7-->
					</div>
				</div>
			</div>

		</div>
	</div>
</section>

	{{ render(controller('sitesiteBundle:Default:miniListeInfo')) }}    

{% endblock mainContainer %}

