{% if sitedata is defined %}
<div class="header_top" style="background-color:{{ sitedata.couleur|default('darkred') }};"><!--header_top-->
	<div class="container">
		<div class="row">
			<div class="col-sm-8">
				<div class="contactinfo">
					<ul class="nav nav-pills">
						{% if sitedata.boutiques|default([])|length > 0 %}
						{% if sitedata.boutiques.0.telfixe is not null %}
						<li><a><i class="fa fa-phone m-r-xs"></i> {{ sitedata.boutiques.0.telfixe }}</a></li>
						{% endif %}
						{% if sitedata.boutiques.0.mobile is not null %}
						<li><a><i class="fa fa-mobile m-r-xs"></i> {{ sitedata.boutiques.0.mobile }}</a></li>
						{% endif %}
						{% if sitedata.boutiques.0.email is not null %}
						<li><a href="mailto:{{ sitedata.boutiques.0.email }}"><i class="fa fa-envelope m-r-xs"></i> {{ sitedata.boutiques.0.email }}</a></li>
						{% endif %}
						{% endif %}
					</ul>
				</div>
			</div>
			<div class="col-sm-4">
				<div class="social-icons pull-right">
					<ul class="nav navbar-nav">
						<li>
							<a href="https://www.facebook.com/La-boucherie-du-Veyron-130699467080417" target="_blank">
								<i class="fa fa-facebook"></i>
							</a>
						</li>
					</ul>
				</div>
			</div>
		</div>
	</div>
</div><!--/header_top-->
{% endif %}