{% import 'sitesiteBundle:blocks:blocks_actions.html.twig' as blocks_actions %}
{% if items|default([])|length > 0 %}
<section id="section-color">
{# <section> #}

	<div id="category-nav-tab">
	
		<div class="container">
							
			<div class="category-tab"><!--category-tab-->                           
				<ul class="nav nav-tabs">
					{% for item in items if flatCategorieChildren(item.children|default([]))|length > 0 %}
					{% if item.className in ['categorie'] %}
					<li class="{% if loop.first %}active{% endif %}" data-target="#recommended-item-carousel" data-slide-to="{{ loop.index0 }}">
						<a>{{ UCfirst(item.nom) }}</a>
					</li>
					{% endif %}
					{% endfor %}
				</ul>
			</div><!--/category-tab--> 
			
		</div>
	
	</div>
	
	<div class="container section-tabs"><!--large container-->
		<div class="row">	
			<div class="col-sm-12">
				<div id="recommended-item-carousel" class="carousel slide" data-ride="carousel">
					<div class="carousel-inner">
						{% set nbitems = 0 %}
						{% for item in items if flatCategorieChildren(item.children|default([]))|length > 0 %}
						{% if item.className in ['categorie'] %}
						<div class="item{% if loop.first %} active{% endif %}">
							{{ blocks_actions.list_blockmini(flatCategorieChildren(item.children), 4) }}
						</div>
						{% set nbitems = nbitems + 1 %}
						{% endif %}
						{% endfor %}
					</div>
					{% if nbitems > 1 %}
					<a class="left recommended-item-control" href="#recommended-item-carousel" data-slide="prev">
						<i class="fa fa-angle-left"></i>
					</a>
					<a class="right recommended-item-control" href="#recommended-item-carousel" data-slide="next">
						<i class="fa fa-angle-right"></i>
					</a>
					{% endif %}
				</div>
			</div><!--/category-tab-->
		</div><!--/cols-sm-12-->
	</div><!--/row-->
	<!--/container-->
</section>
{% endif %}

