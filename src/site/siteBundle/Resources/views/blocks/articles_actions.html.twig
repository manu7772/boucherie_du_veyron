
{% macro boxArticle(item, categorie) %}
{# Affichage d'une box pour articles #}
{% if item.className == "article" %}
{% import 'sitesiteBundle:blocks:blocks_actions.html.twig' as blocks_actions %}
{% set EDITORMODE = (app.environment in ['DEV', 'TEST']) or (is_granted('ROLE_EDITOR')) %}
{% set categorie = categorie|default(item.getNestedParentsByClass('categorie')[0]) %}
<div class="item active">
	<div class="col-sm-12 col-md-4">
		<div class="product-image-wrapper">
			<div class="single-products">
				<div class="productinfo">
					{{ blocks_actions.imageprint(item, 275, null) }}
					<div class="product-bottom">
						<div class="btn-group order-group for-product" role="group">
							<!-- <h2>25<small>,50<sup>€</sup><span>/Kg</span></small></h2> -->
							<h2>{{ item.prix|number_format(2, ',', '') }}<sup>€</sup></h2>
							{% if marketplace.vente and item.vendable %}
							<button type="button" class="btn btn-default btn-commander"><i class="fa fa-shopping-cart fa-flip-horizontal"></i></button>
							<input class="command_quantity" type="text" name="quantity" value="1 x 150g" autocomplete="off" size="10">
							<span class="btn-quantity">
								<a class="btn quantity-top"><i class="fa fa-angle-up"></i></a>
								<a class="btn quantity-bottom"><i class="fa fa-angle-down"></i></a>
							</span>
							{% endif %}
						</div>
					</div>
				</div>
				<p class="tab-name-product">
					{{ item.nom }}
					{%- if EDITORMODE %} <a href="{{ path('siteadmin_entite', {entite: item.className, id: item.id, action: 'show'}) }}"><i class="fa fa-eye icon-wait-on-click"></i></a>{% endif %}
					{%- if EDITORMODE %} <a href="{{ path('siteadmin_entite', {entite: item.className, id: item.id, action: 'edit'}) }}"><i class="fa fa-pencil icon-wait-on-click"></i></a>{% endif %}
				</p>
				<p class="tab-info-category">{{ categorie.parent.nom|default('') }}</p>
{# 				{% if categorie.image != null %}
				{% if categorie.image.isScreenableImage %}
				<img src="{{ categorie.image.imgThumbnail(66, null, 'in') }}" class="info-triangle" style="border:none;" alt="{{ categorie }}">
				{% endif %}
				{% else %}
				{% set stop = false %}
				{% for child in categorie.nestedParents if (child.image != null) and (child in item.nestedParents) and (stop == false) %}
				<img src="{{ child.image.imgThumbnail(66, null, 'in') }}" class="info-triangle" style="border:none;" alt="{{ child }}">
				{% set stop = true %}
				{% endfor %}
				{% endif %} #}
			</div>
		</div>
	</div>
</div>
{% endif %}
{% endmacro %}

