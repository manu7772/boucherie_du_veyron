{% import 'sitesiteBundle:blocks:actions.html.twig' as actions %}

<div class="footer-widget">
	<div class="container">
		<div class="row">
			{% if sitedata is defined %}
			{% for item1 in sitedata.categorieFooters|default([]) %}
			<div class="col-sm-2">
				<div class="single-widget">
					<h2>{{ item1 }}</h2>
					<ul class="nav nav-pills nav-stacked">
						{%- for item2 in item1.group_nestedsChilds -%}
						<li><a {{ actions.elementHref(item2, item1, '_self') }}>{{ UCfirst(item2) }}</a></li>
						{%- endfor -%}
						{%- for item2 in item1.group_categorie_parentChilds -%}
						<li><a {{ actions.elementHref(item2, item1, '_self') }}>{{ UCfirst(item2) }}</a></li>
						{%- endfor -%}
					</ul>
				</div>
			</div>
			{% endfor %}
			{% endif %}
		</div>
	</div>
</div>