{% trans_default_domain 'siteUserBundle' %}

	<section id="section-gray">
	
		<div id="contact-page" class="container-fluid">
			<div class="row">
				<div class="col-sm-6 col-sm-offset-3">
					{% if form_errors(form) != null %}
					<div class="status alert alert-danger">{{ form_errors(form) }}</div>
					{% endif %}
					<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
						<h4>{{ 'info.compte'|trans|capitalize }}</h4>
						<div class="form-group col-md-12">
							{{ form_widget(form.username) }}
							{{ form_errors(form.username) }}
						</div>
						<div class="form-group col-md-12">
							{{ form_widget(form.email) }}
							{{ form_errors(form.email) }}
						</div>
						<hr class="dotted">
						<h5>{{ 'info.autres'|trans|capitalize }}</h5>
						<div class="form-group col-md-12">
							{{ form_widget(form.nom) }}
							{{ form_errors(form.nom) }}
						</div>
						<div class="form-group col-md-12">
							{{ form_widget(form.prenom) }}
							{{ form_errors(form.prenom) }}
						</div>
						<h5>{{ 'fields.avatar'|trans|capitalize }}</h5>
						<div class="form-group col-md-12">
							{{ form_widget(form.avatar) }}
							{{ form_errors(form.avatar) }}
						</div>

						{% if form.adminhelp is defined %}
						<div class="form-group col-md-12">
							<label class="text-muted">{{ 'fields.help'|trans|capitalize }} </label>
							{{ form_widget(form.adminhelp) }}
							{{ form_errors(form.adminhelp) }}
						</div>
						{% endif %}
						{% if form.admintheme is defined %}
						<div class="form-group col-md-12">
							{{ form_widget(form.admintheme) }}
							{{ form_errors(form.admintheme) }}
						</div>
						{% endif %}

						<div class="form-group col-md-12">
							{{ form_widget(form.langue) }}
							{{ form_errors(form.langue) }}
							<p>&nbsp;<small><i>({% for loc in default_locales|split("|") %}{{ loc }}{% if not loop.last %}, {% endif %}{% endfor %})</i></small></p>
						</div>

						<div class="form-group col-md-12">
							<input type="submit" id="_submit" name="_submit" class="btn btn-primary btn-md btn-block" value="{{ 'profile.edit.submit'|trans|capitalize }}">
						</div>
						{{ form_rest(form) }}
					</form>
				</div>
			</div>
		</div>

	</section>
