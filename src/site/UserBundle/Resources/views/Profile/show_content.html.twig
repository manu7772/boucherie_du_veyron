{% trans_default_domain 'siteUserBundle' %}

	<section id="section-gray">
	
		<div id="contact-page" class="container-fluid"><!--container-->
			<div class="row">
				{% if user.avatar|default(null) != null %}
				<div class="col-sm-2 col-sm-offset-2 text-center m-t-lg">
					<h4 class="title">{{ 'fields.avatar'|trans|capitalize }}</h4>
					<img src="{{ user.avatar.imgThumbnail(256,256,'cut')|raw }}" class="img-responsive img-thumbnail">
				</div>
				{% else %}
				{% set partTwo = ' col-sm-offset-3' %}
				{% endif %}
				<div class="col-sm-6{{ partTwo|default('')|raw }} m-t-lg">
					<h4 class="title">{{ 'info.compte'|trans|capitalize }}</h4>
					<div class="row">
						<div class="col-sm-4 text-muted text-right hidden-xs">{{ 'profile.show.username'|trans }}</div>
						<div class="col-sm-4 text-muted teleft visible-xs">{{ 'profile.show.username'|trans }}</div>
						<div class="col-sm-8"><strong>{{ user.username }}</strong></div>
					</div>
					<div class="row">
						<div class="col-sm-4 text-muted text-right hidden-xs">{{ 'profile.show.email'|trans }}</div>
						<div class="col-sm-4 text-muted teleft visible-xs">{{ 'profile.show.email'|trans }}</div>
						<div class="col-sm-8"><strong>{{ user.email }}</strong></div>
					</div>
					<hr class="dotted">
					<h5 class="title">{{ 'info.autres'|trans|capitalize }}</h5>
					<div class="row">
						<div class="col-sm-4 text-muted text-right hidden-xs">{{ 'fields.nom'|trans|capitalize }}</div>
						<div class="col-sm-4 text-muted text-left visible-xs">{{ 'fields.nom'|trans|capitalize }}</div>
						<div class="col-sm-8"><strong>{{ user.nom }}</strong></div>
					</div>
					<div class="row">
						<div class="col-sm-4 text-muted text-right hidden-xs">{{ 'fields.prenom'|trans|capitalize }}</div>
						<div class="col-sm-4 text-muted text-left visible-xs">{{ 'fields.prenom'|trans|capitalize }}</div>
						<div class="col-sm-8"><strong>{{ user.prenom }}</strong></div>
					</div>
					<hr class="dotted">
					<div class="row">
						<div class="col-sm-6">
							<a href="{{ path('fos_user_profile_edit') }}" type="button" class="btn btn-sm btn-primary btn-block">{{ 'profile.action.modify'|trans|capitalize }}</a>
						</div>
						<div class="col-sm-6">
							<a href="{{ path('fos_user_change_password') }}" type="button" class="btn btn-sm btn-primary btn-block">{{ 'change_password.submit'|trans|capitalize }}</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</section>
