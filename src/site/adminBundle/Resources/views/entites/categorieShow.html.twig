{% extends 'siteadminBundle:entites:entiteShow.html.twig' %}
{% set cssjsloads = 'TAB' %}
{% import 'siteadminBundle:blocks:itemBloc.html.twig' as itemBloc %}
{% import 'siteadminBundle:blocks:sortable_nested_categories.html.twig' as nestcat %}

{% set DEVMODE = (app.environment in ['DEV', 'TEST']) or (is_granted('ROLE_SUPER_ADMIN')) %}
{% set style = '' %}
{% set style = ' style="min-height: 200px; height:auto !important; height: 200px;"' %}

{% block breadcrumb %}
	<ol class="breadcrumb ellipsis col-md-9">
		<li><a href="{{ path('siteadmin_homepage') }}"><strong>{{ UCfirst('administration'|trans) }}</strong></a></li>
		<li><a href="{{ path('siteadmin_repo_categorie', {method: 'findRoots'}) }}"><strong>{{ UCfirst('name_s'|trans({}, entite_name)) }}</strong></a></li>
		<li><a href="{{ path('siteadmin_repo_categorie', {method: 'findCollectionsByType', repoParams: entite.type}) }}"><strong>Types {{ UCfirst(('types.' ~ entite.type)|trans({}, entite.className)) }}</strong></a></li>
		{% for parent in entite.parents %}
			<li><a href="{{ actions.entiteLink(parent, 'show', type, type_value_joiner) }}"><strong>{{ parent.nom|trans({}, parent.className) }}</strong></a></li>
		{% endfor %}
		<li>{{ entite.nom|default('#' ~ entite.id)|trans({}, entite.className) }}</li>
	</ol>
{% endblock breadcrumb %}

{% block buttons %}
	<a href="{{ path('siteadmin_create_categorie', {rootParent: entite.id}) }}" type="button" class="btn btn-xs btn-warning pull-right"><i class="fa fa-plus icon-wait-on-click m-r-sm"></i>{{ UCfirst('create_btn_child'|trans({'%name%': entite.nom}, entite.className)) }}</a>
{% endblock buttons %}

{% block content %}
<div class="row">

	<div class="col-md-6">
		<div class="ibox float-e-margins">
			<div class="ibox-content">
				<div class="tabs-container">
					<ul class="nav nav-tabs">
						<li class="active"><a data-toggle="tab" href="#tab-0"><i class="fa fa-cog visible-xs"></i><span class="hidden-xs">{{ UCfirst('fields.technique'|trans({}, entite.className)) }}</span></a></li>
						<li><a data-toggle="tab" href="#tab-1"><i class="fa fa-sitemap visible-xs"></i><span class="hidden-xs">{{ UCfirst('fields.children'|trans({}, entite.className)) }}</span></a></li>
						<li><a data-toggle="tab" href="#tab-2"><i class="fa fa-sitemap visible-xs"></i><span class="hidden-xs">{{ UCfirst('fields.parents'|trans({}, entite.className)) }}</span></a></li>
						<li><a data-toggle="tab" href="#tab-3"><i class="fa fa-file-o visible-xs"></i><span class="hidden-xs">{{ UCfirst('fields.subEntitys'|trans({}, entite.className)) }}</span></a></li>
						<!-- <li><a data-toggle="tab" href="#tab-4"><i class="fa fa-picture-o visible-xs"></i><span class="hidden-xs">{{ UCfirst('fields.image'|trans({}, entite.className)) }}</span></a></li> -->
					</ul>
					<div class="tab-content">

						<div id="tab-0" class="tab-pane active">
							<div class="panel-body"{{ style|raw }}>
								<h3 class='text-navy visible-xs m-t-none'>{{ UCfirst('fields.technique'|trans({}, entite.className)) }}</h3>
								<hr class="m-t-xs m-b-xs visible-xs">
								<div class="row">
									<div class="col-xs-12">
										<p class="m-b-xs">{{ UCfirst('fields.icon'|trans({}, entite.className)) }} : <i class="fa {{ actions.icon(entite) }}"></i>{% if entite.icon == null %} <i class="text-muted"><small>({{ 'icons.default_icon'|trans }})</small></i>{% endif %}</p>
										<p class="m-b-xs">{{ UCfirst('fields.lvl'|trans({}, entite.className)) }} : {{ entite.lvl }}{% if not entite.hasParents() %} <i class="text-muted"><small>(Root)</small></i>{% endif %}</p>
										<p class="m-b-xs">{{ UCfirst('fields.couleur'|trans({}, entite.className)) }} : {{ actions.colorDot(entite.couleur, '1x') }}</p>
										<p class="m-b-xs">
											Type <strong>{{ ('types.' ~ entite.type)|trans({}, entite.className) }}</strong>, éléments acceptés :
											<p class="m-l-lg text-muted"><i>• {{ entite.accepts|join('<br>• ')|raw }}</i></p>
										</p>
									</div>
								</div>
							</div>
						</div>

						<div id="tab-1" class="tab-pane">
							<div class="panel-body"{{ style|raw }}>
								<h3 class='text-navy visible-xs m-t-none'>{{ UCfirst('fields.children'|trans({}, entite.className)) }}</h3>
								<hr class="m-t-xs m-b-xs visible-xs">
								<div class="row">
									<div class="col-xs-12">
										<h4>Enfants <small><span class="label inline label-primary"><i class="fa {{ actions.icon(entite) }}"></i></span> directs / <span class="label inline"><i class="fa {{ actions.icon(entite) }}"></i></span> indirects</small></h4>
										{# {{ actions.labelLinkList(entite.group_categorie_parentChilds, entite.group_categorie_parentChilds, null, type, type_value_joiner, 'show') }} #}
										{# {{ actions.labelLinkList(entite.allNestedChildsByGroup('categorie_parent'), entite.nestedChildsByGroup('categorie_parent'), null, type, type_value_joiner, 'show') }} #}
										{{ actions.labelLinkList(entite.allCategorieChilds, entite.categorieChilds, null, type, type_value_joiner, 'show') }}
										<hr>
										<h4>Alias <small>(liens symboliques)</small></h4>
										{{ actions.labelLinkList(entite.allAlias(false), entite.alias(false), null, type, type_value_joiner, 'show') }}
										<hr>
										<h4>Enfants et Alias <small>(catégories et liens symboliques)</small></h4>
										{{ actions.labelLinkList(entite.allCategorieChilds(true), entite.categorieChilds(true), null, type, type_value_joiner, 'show') }}
									</div>
								</div>
							</div>
						</div>

						<div id="tab-2" class="tab-pane">
							<div class="panel-body"{{ style|raw }}>
								<h3 class='text-navy visible-xs m-t-none'>{{ UCfirst('fields.parents'|trans({}, entite.className)) }}</h3>
								<hr class="m-t-xs m-b-xs visible-xs">
								<div class="row">
									<div class="col-xs-12">
										{% if entite.parents_inverse != null %}
										{{ actions.labelLinkList(entite.parents, entite.parent, null, null, null, 'show') }}
										{% else %}
										<h6><i class='text-muted'>{{ UCfirst('noParent'|trans({}, entite.className)) }}</i></h4>
										{% endif %}
									</div>
								</div>
							</div>
						</div>

						<div id="tab-3" class="tab-pane">
							<div class="panel-body"{{ style|raw }}>
								<h3 class='text-navy visible-xs m-t-none'>{{ UCfirst('fields.subEntitys'|trans({}, entite.className)) }}</h3>
								<hr class="m-t-xs m-b-xs visible-xs">
								<div class="row">
									<div class="col-xs-12">
										{% set directNesteds = entite.nestedChildsByGroup(null, true) %}
										<h4>Éléments {% if directNesteds|length > 1 %} <i class="fa fa-unsorted text-muted"></i>{% endif %}</h4>
										{% if directNesteds|length > 0 %}
										<span id="nesteds" class="{% if entite.getNestedChildsByGroup('nesteds')|length > 1 %}sortlist{% endif %}" data-parent="categorie_{{ entite.id }}" data-group="nesteds" data-url="{{ path('ajax_data_sort') }}">
										{{ actions.labelLinkList(directNesteds, directNesteds, null, type, type_value_joiner, 'show') }}
										{% endif %}
										<hr>
										<h4>Éléments d'enfants <small><i>(sans alias)</i></small></h4>
										{{ actions.labelLinkList(entite.allNestedChildsByGroup(null, false), entite.nestedChildsByGroup(null, false), null, type, type_value_joiner, 'show') }}
										<hr>
										<h4>Éléments d'enfants <small><i>(avec alias)</i></small></h4>
										{{ actions.labelLinkList(entite.allNestedChildsByGroup(null, true), directNesteds, null, type, type_value_joiner, 'show') }}
									</div>
								</div>
							</div>
						</div>

{# 						<div id="tab-4" class="tab-pane">
							<div class="panel-body"{{ style|raw }}>
								<h3 class='text-navy visible-xs m-t-none'>{{ UCfirst('fields.image'|trans({}, entite.className)) }}</h3>
								<hr class="m-t-xs m-b-xs visible-xs">
								<div class="row">
									<div class="col-xs-12">
										{% if entite.mainMedia|default(null) != null %}
										<img src="{{ entite.mainMedia.img }}" class="img-responsive center-block img-rounded">
										{% else %}
										<i class="fa fa-ban fa-5x text-muted fa-border"></i>
										{% endif %}
									</div>
								</div>
							</div>
						</div> #}

					</div>
				</div>
			</div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="ibox float-e-margins">
			<div class="ibox-content">
				<div class="tabs-container">
					<ul class="nav nav-tabs">
						<li class="active"><a data-toggle="tab" href="#tab-0"><i class="fa fa-folder visible-xs"></i><span class="hidden-xs">Arborescence</span></a></li>
					</ul>
					<div class="tab-content">

						<div id="tab-0" class="tab-pane active">
							<div class="panel-body"{{ style|raw }}>
								<h3 class='text-navy visible-xs m-t-none'>Arborescence</h3>
								<hr class="m-t-xs m-b-xs visible-xs">
								<div class="row">
									<div class="col-xs-12">
										{# <div id="jsajx-{{ entite.id }}" class="jstree-ajax" jstree-plugins="" jstree-types='{{ entite.accepts|json_encode() }}' jstree-groups="{{ ['nesteds', 'categorie_parent', 'pagewebs']|json_encode }}"></div> #}
										<div id="jsajx-{{ entite.id }}" class="jstree-ajax" jstree-plugins="" jstree-types='{{ entite.accepts|json_encode() }}'></div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

</div>
{% endblock content %}

{% block end_javascripts %}
{{ parent() }}
{{ nestcat.nestedtreeAjax() }}
{% endblock end_javascripts %}


