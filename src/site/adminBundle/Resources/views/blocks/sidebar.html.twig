{% import 'siteadminBundle:blocks:menumacro.html.twig' as menumacro %}

<nav class="navbar-default navbar-static-side" role="navigation">
	<div class="sidebar-collapse">
		<ul class="nav" id="side-menu">
			<li class="nav-header">
				<div class="dropdown profile-element">
					<span>
						{% if app.request.getSchemeAndHttpHost() == 'http://localhost' or site_domains.public is not defined %}
						<a href="{{ path(homepage) }}">
						{% else %}
						<a href="{{ site_domains.admin.reseau|default('http://') }}{{ site_domains.public.prefix }}.{{ site_domains.public.domain }}.{{ site_domains.public.extensions[0] }}{{ site_domains.public.path|default('') }}">
						{% endif %}
							{% if sitedata.adminLogo|default(null) != null %}
							<img alt="image" class="" src="{{ sitedata.adminLogo.img }}" />
							{% else %}
							{% if fileExists(asset('bundles/' ~ siteadminBundle|default('siteadminBundle') ~ '/images/logo_admin.png')) %}
							<img alt="image" class="" src="{{ asset('bundles/' ~ siteadminBundle|default('siteadminBundle') ~ '/images/logo_admin.png') }}" />
							{% else %}
							<img alt="image" class="" src="{{ asset('bundles/siteadmin/images/logo_admin.png') }}" />
							{% endif %}
							{% endif %}
						</a>
					</span>
					{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					<a data-toggle="dropdown" class="dropdown-toggle" href="#">
						<span class="clear">
							{% if sitedata.nom|default(null) != null %}
							<span class="block m-t-xs"> <strong class="font-bold">{{ UCfirst(sitedata.nom) }}</strong></span>
							{% else %}
							<span class="block m-t-xs"> <strong class="font-bold">{{ UCfirst('admin'|trans) }}</strong></span>
							{% endif %}
							<span class="text-muted text-xs block">{{ app.user.username|default('anon.') }} <b class="caret"></b></span> 
						</span>
					</a>
					<ul class="dropdown-menu animated fadeInRight m-t-xs">
						<li><a href="{{ path('fos_user_profile_show') }}"><i class="fa fa-user"></i> {{ UCfirst('profile.name'|trans({}, 'siteUserBundle')) }}</a></li>
						<li><a href="{{ path('fos_user_security_logout') }}"><i class="fa fa-sign-out"></i> {{ UCfirst('layout.logout'|trans({}, 'siteUserBundle')) }}</a></li>
					</ul>
					{% endif %}
				</div>
				<div class="logo-element">
					<i class="fa fa-desktop visible-lg"></i>
					<i class="fa fa-laptop visible-md"></i>
					<i class="fa fa-tablet visible-sm"></i>
					<i class="fa fa-mobile-phone visible-xs"></i>
				</div>
			</li>
			{{ menumacro.menu_Admin() }}
		</ul>
	</div>
</nav>

